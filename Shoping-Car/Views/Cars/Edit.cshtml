@model EditCarViewModel

@{
    ViewData["Title"] = "Edit Car";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            @*            <form method="post">
            <label class="form-label" for="customFile">Default file input example</label>
            <input type="file" class="form-control" id="customFile" />
            </form>*@

            @Html.HiddenFor(m => m.Id)
            <div class="mb-3">
                <label asp-for="@Model.CarName" class="form-label"></label>
                <input asp-for="@Model.CarName" class="form-control" aria-required="true" />
                <span asp-validation-for="CarName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Model" class="form-label"></label>
                <input asp-for="@Model.Model" class="form-control" aria-required="true" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.TheProductYear" class="form-label"></label>
                <input asp-for="@Model.TheProductYear" class="form-control" aria-required="true" />
                <span asp-validation-for="TheProductYear" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label"></label>
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.StartRegistrationDate" class="form-label"></label>
                <input asp-for="@Model.StartRegistrationDate" class="form-control" aria-required="true" />
                <span asp-validation-for="StartRegistrationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EndRegistrationDate" class="form-label"></label>
                <input asp-for="@Model.EndRegistrationDate" class="form-control" aria-required="true" />
                <span asp-validation-for="EndRegistrationDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Cost" class="form-label"></label>
                <input asp-for="@Model.Cost" class="form-control" aria-required="true" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RegistrationsId" class="form-label">Registration Status</label>
                <select asp-for="@Model.RegistrationsId" class="form-control">
                    @foreach (var registration in Model.Registrations)
                    {
                        <option value="@registration.Id">@registration.Registration</option>
                    }
                </select>
                <span asp-validation-for="RegistrationsId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>
        <form class="mt-2" asp-controller="Cars" asp-action="Delete" asp-route-id="@Model.Id">
            <div class="d-grid gap-2">
                <span style="float:left">
                    <input type="submit" value="Delete" class="btn btn-danger mb-2"
                           onclick="return confirm('Are you sure you want to delete post: @Model.Id')" />
                </span>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}